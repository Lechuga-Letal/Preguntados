<title>Perfil</title>
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<link rel="stylesheet" href="/public/css/vistas/perfilStyle.css">
<link rel="stylesheet" href="/public/css/componentes/headerComponente.css">
</head>
<body>

    <header class="header">
        <h2 class="titulo">Preguntados</h2>
        <div class="user-info">
            <form method="POST" action="/Preguntados/inicio/logout">
            <input class="logout-btn" type="submit" value="Cerrar sesiÃ³n">
            </form>
            <p class="username">{{usuario.nombre_completo}}</p>
            <img src="/{{usuario.foto_perfil}}" alt="{{usuario.nombre_completo}}">
        </div>
    </header>

    <main class="container py-3">
        <div class="row g-3 align-items-start">
            <!-- User Card -->
            <div class="col-md-6">
            <div class="card bg-dark text-light p-3 rounded-3 shadow-sm">
                <div class="text-center">
                {{#usuario.foto_perfil}}
                <img src="{{usuario.foto_perfil}}" alt="{{usuario.usuario}}" class="img-fluid rounded-circle mb-2" width="90" height="90">
                {{/usuario.foto_perfil}}

                {{^usuario.foto_perfil}}
                <img src="/public/imagenes/usuarioImagenDefault.png" alt="{{usuario.usuario}}" class="img-fluid rounded-circle mb-2" width="90" height="90">
                {{/usuario.foto_perfil}}

                <h5 class="fw-bold mb-0">{{usuario.nombre_completo}}</h5>
                <small class="text-muted">@{{usuario.usuario}}</small><br>
                <small class="text-muted">{{usuario.pais}}, {{usuario.ciudad}}</small>
                </div>

                <ul class="list-group list-group-flush mt-3">
                <li class="list-group-item bg-dark text-light py-1">Nacimiento: {{usuario.anio_nacimiento}}</li>
                <li class="list-group-item bg-dark text-light py-1">Sexo: {{usuario.sexo}}</li>
                <li class="list-group-item bg-dark text-light py-1">Correo: {{usuario.mail}}</li>
                <li class="list-group-item bg-dark text-light py-1">Rol: {{usuario.rol}}</li>
                </ul>
            </div>
            </div>

            <!-- Map -->
            <div class="col-md-6">
            <div id="mapa" style="height:400px;" class="rounded border border-secondary"></div>
            </div>
        </div>

        <div class="text-center mt-3">
            <a href="/ranking" class="btn btn-secondary btn-sm px-4">Volver</a>
        </div>

    </main>
</body>
<script src="/public/js/mapaPerfil.js"></script>
</html>