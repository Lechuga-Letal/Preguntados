<title>Inicio</title>
<link rel="stylesheet" href="/public/css/vistas/misDesafiosStyle.css">
<link rel="stylesheet" href="/public/css/componentes/headerComponente.css">
</head>

<body>

    <header class="header">
        <h2 class="titulo">Preguntados</h2>
        <div class="user-info">
            <form method="POST" action="/Preguntados/inicio/logout">
            <input class="logout-btn" type="submit" value="Cerrar sesión">
            </form>
            <p class="username">{{usuario.nombre_completo}}</p>
            <img src="/{{usuario.foto_perfil}}" alt="{{usuario.nombre_completo}}">
        </div>
    </header>

    <div class="container">
        <h1>Tus desafios: </h1>
        
        <!--Los condicionales de mustache no estan perfectos. Las tablas se muestran incluso si no hay data.-->
        
    <div>
        <section class="tabla mb-4">
            <h3 class="text-light">Partidas finalizadas:</h3>
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Pais</th>
                        <th>Puntaje</th>
                        <th>iD partida</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody  style="text-align: center">
                    {{#partidas_finalizadas}}
                        <tr>
                            <td>{{nombreUsuario}}</td>
                            <td>{{paisUsuario}}</td>
                            <td>{{puntaje}}</td>
                            <td>{{idPartida}}</td>
                            <td>{{fecha}}</td>
                        </tr>
                    {{/partidas_finalizadas}}
                    {{^partidas_finalizadas}}
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                No has terminado ninguna partida aún.
                            </td>
                        </tr>
                    {{/partidas_finalizadas}}
                </tbody>
            </table>
        </section>
    </div>


    <div class="text-center mt-5">
        <a href="/inicio" class="btn btn-secondary">Volver</a>
    </div>
</div>

