    <title>Login</title>
    <style>
        * {
            box-sizing: border-box;
        }
        body {
            margin: 0;
            height: 100vh;
            background: linear-gradient(135deg, #141414, #1f1f1f, #262626);
            font-family: 'Poppins', sans-serif;
            color: #e0e0e0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .logo {
            position: absolute;
            top: 25px;
            left: 25px;
            width: 80px;
            height: 80px;
            filter: drop-shadow(0 0 6px rgba(255, 255, 255, 0.2))
            drop-shadow(0 0 12px rgba(255, 255, 255, 0.1));
            z-index: 10;
            transition: transform 0.3s ease;
        }
        h1 {
            font-size: 3rem;
            font-weight: 700;
            letter-spacing: 2px;
            color: #d9d9d9;
            text-shadow: 0 3px 6px rgba(0, 0, 0, 0.6);
            margin-bottom: 40px;
            text-transform: uppercase;
        }

        .subtitle {
            font-size: 1.1rem;
            color: #aaaaaa;
            margin-top: -25px;
            margin-bottom: 35px;
            text-shadow: 0 1px 2px rgba(0,0,0,0.6);
        }
        .logo:hover {
            transform: scale(1.05);
        }

        form {
            background: rgba(31, 31, 31, 0.8);
            backdrop-filter: blur(8px);
            border-radius: 18px;
            padding: 45px 40px;
            width: 330px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.6);
            animation: fadeIn 0.8s ease forwards;
            transform: translateY(15px);
            text-align: center;
        }

        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 22px;
            border: none;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.08);
            color: #f1f1f1;
            font-size: 0.95rem;
            box-shadow: inset 1px 1px 3px #0f0f0f, inset -1px -1px 3px #2a2a2a;
            transition: all 0.3s ease;
        }

        input[type="text"]:focus,
        input[type="password"]:focus {
            outline: none;
            background: rgba(255, 255, 255, 0.12);
            box-shadow: 0 0 6px rgba(255,255,255,0.25);
        }

        ::placeholder {
            color: #aaa;
        }

        input[type="submit"] {
                display: inline-block;
                margin-top: 15px;
                padding: 12px 40px;
                border: 2px solid rgba(102, 102, 102, 0.73);
                border-radius: 10px;
                color: #ccc;
                text-decoration: none;
                font-weight: 600;
                transition: all 0.25s ease;
            }

        input[type="submit"]:hover {
                background: rgba(255, 255, 255, 0.08);
                border-color: #888;
                color: #fff;
                transform: translateY(-1px);
            }

        .registrarse {
            display: inline-block;
            margin-top: 15px;
            padding: 12px 40px;
            border: 2px solid #666;
            border-radius: 10px;
            color: #ccc;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.25s ease;
        }

        .registrarse:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: #888;
            color: #fff;
            transform: translateY(-1px);
        }

        footer {
            position: absolute;
            bottom: 15px;
            text-align: center;
            color: #888;
            font-size: 0.85rem;
            width: 100%;
        }

        .central {
            text-align: center; 
            margin-top: 20px;
        }

        @media (max-width: 480px) {
            .logo {
                width: 65px;
                height: 65px;
                top: 15px;
                left: 15px;
            }

            form {
                width: 85%;
                padding: 35px 25px;
            }
        }
    </style>

</head>

<body>
<img src="./imagenes/Logo.png" alt="logo" class="logo">
<h1>PREGUNTADOS</h1>
<p class="subtitle">¿Estas listo para comenzar?</p>
<div>
    <form method="POST" action="/Preguntados/login/login">
        {{#error}}
            <div class="error-message">{{error}}</div>
        {{/error}}
        <p>
            <input type="text" name="usuario" placeholder="Usuario">
        </p>

        <p>
            <input type="password" name="password" placeholder="Contraseña">
        </p>

        <p>
            <input type="submit" value="Ingresar">
        </p>
    </form>

    <p class="central">
        <a href="/Preguntados/register/registerForm" class="registrarse">Registrarse</a>
    </p>

</div>

