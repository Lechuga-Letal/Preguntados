
    <title>Registro</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }
        body {
            margin: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: #e0e0e0;
            background: linear-gradient(135deg, #181818, #1f1f1f);
            display: flex;
            flex-direction: column;
        }

        header {
            background: rgba(15, 15, 15, 0.95);
            border-bottom: 1px solid #2e2e2e;
            padding: 15px 60px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header h2 {
            color: #f5f5f5;
            font-weight: 700;
            letter-spacing: 1px;
            margin: 0;
        }

        header nav a {
            color: #bbb;
            text-decoration: none;
            margin: 0 15px;
            font-weight: 500;
            transition: color 0.3s;
        }

        header nav a:hover {
            color: #fff;
        }

        main {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            gap: 50px;
            padding: 60px 40px;
        }

        .form-container {
            background: rgba(25, 25, 25, 0.95);
            border-radius: 18px;
            padding: 40px 35px;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.6);
            animation: fadeIn 0.8s ease forwards;
        }

        .form-container h1 {
            font-size: 2rem;
            font-weight: 700;
            color: #f5f5f5;
            margin-bottom: 25px;
            text-transform: uppercase;
            text-align: center;
            letter-spacing: 1.5px;
        }

        form p {
            margin-bottom: 18px;
            text-align: left;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="date"],
        input[type="file"] {
            width: 100%;
            padding: 12px 14px;
            border: none;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.07);
            color: #f1f1f1;
            font-size: 0.95rem;
            box-shadow: inset 1px 1px 3px #0f0f0f, inset -1px -1px 3px #2a2a2a;
            transition: all 0.3s ease;
        }

        input:focus {
            outline: none;
            background: rgba(255, 255, 255, 0.12);
            box-shadow: 0 0 6px rgba(255, 255, 255, 0.25);
        }

        input[type="submit"] {
            width: 100%;
            margin-top: 10px;
            padding: 13px;
            border: 2px solid rgba(102, 102, 102, 0.73);
            border-radius: 10px;
            color: #ccc;
            background: transparent;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.25s ease;
            font-size: 1rem;
        }

        input[type="submit"]:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: #888;
            color: #fff;
            transform: translateY(-1px);
        }

        .link-login {
            display: inline-block;
            margin-top: 25px;
            text-align: center;
            color: #ccc;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.25s ease;
        }

        .link-login:hover {
            color: #fff;
        }

        .mapaS {
            background: rgba(20, 20, 20, 0.85);
            padding: 25px;
            border-radius: 16px;
            width: 350px;
            display: flex;
            flex-direction: column;
            align-items: center;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.6);
        }

        .mapaS h3 {
            color: #fff;
            font-weight: 600;
            margin-bottom: 10px;
            text-align: center;
        }

        #mapa {
            height: 300px;
            width: 100%;
            border-radius: 10px;
            border: 1px solid #444;
        }

        @media (max-width: 900px) {
            main {
                flex-direction: column;
                align-items: center;
            }
            .mapaS {
                width: 100%;
                max-width: 400px;
            }
        }
    </style>
</head>
<body>
<header>
    <h2>PREGUNTADOS</h2>
    <nav>
        <a href="/Preguntados/paginaPrincipal">Pagina principal</a>
        <a href="/Preguntados/login">Iniciar sesion</a>
        <a href="#">Soporte</a>
    </nav>
</header>

<main>
    <div class="form-container">
        {{#error}}
            <div class="error-message">{{error}}</div>
        {{/error}}
        <h1>Crear cuenta</h1>
        <form method="POST" action="/Preguntados/register/register" enctype="multipart/form-data">

            <p><input type="text" name="nombre_completo" placeholder="Nombre completo" required></p>
            <p> <input type="date" name="anio_nacimiento" required min="{{minDate}}" max="{{maxDate}}"></p>
            <p>
                <label>Sexo:</label><br>
                <label><input type="radio" name="sexo" value="Masculino" > Masculino</label>
                <label><input type="radio" name="sexo" value="Femenino"> Femenino</label>
                <label><input type="radio" name="sexo" value="Prefiero no cargarlo"> Prefiero no cargarlo</label>
            </p>

            <p><input type="text" name="pais" placeholder="País" required></p>
            <p><input type="text" name="ciudad" id="ciudad" placeholder="Ciudad" required></p>
            <p><input type="text" name="usuario" placeholder="Nombre de usuario" required></p>
            <p><input type="email" name="mail" placeholder="Email" required></p>
            <p><input type="password" name="password1" placeholder="Contraseña" required></p>
            <p><input type="password" name="password2" placeholder="Confirmar contraseña" required></p>

            <p>
                <label>Foto de perfil:</label><br>
                <input type="file" name="foto_perfil" accept="image/*">
            </p>

            <input type="submit" value="Registrarse">
        </form>
    </div>

    <div class="mapaS">
        <h3>Si querés, podés seleccionar tu ubicación en el mapa</h3>
        <div id="mapa"></div>
        <input type="hidden" name="latitud" id="latitud">
        <input type="hidden" name="longitud" id="longitud">
    </div>
</main>

<script>
    const mapa = L.map('mapa').setView([-34.6037, -58.3816], 5);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
    }).addTo(mapa);

    let marcador;
    mapa.on('click', function(e) {
        const { lat, lng } = e.latlng;
        if (marcador) mapa.removeLayer(marcador);
        marcador = L.marker([lat, lng]).addTo(mapa);
        document.getElementById('latitud').value = lat;
        document.getElementById('longitud').value = lng;
        document.getElementById('ciudad').value = `Lat: ${lat.toFixed(3)}, Lng: ${lng.toFixed(3)}`;
    });
</script>


