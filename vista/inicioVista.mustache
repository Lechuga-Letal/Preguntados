<title>Inicio</title>
    <style>
        body {
            margin: 0;
            height: 100vh;
            background: linear-gradient(135deg, #181818, #1f1f1f);
            font-family: 'Poppins', sans-serif;
            color: #e0e0e0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .logo {
            position: absolute;
            top: 20px;
            left: 25px;
            width: 80px;
            height: 80px;
            filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.15))
            drop-shadow(0 0 10px rgba(255, 255, 255, 0.1));
        }

        .logout-btn {
            position: absolute;
            top: 25px;
            right: 30px;
            background: linear-gradient(145deg, #2a2a2a, #1a1a1a);
            color: #dcdcdc;
            text-decoration: none;
            font-weight: 600;
            padding: 10px 30px;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            box-shadow: 3px 3px 6px #0f0f0f, -3px -3px 6px #2d2d2d;
            transition: all 0.2s ease;
        }

        .logout-btn:hover {
            background: linear-gradient(145deg, #1a1a1a, #2a2a2a);
            transform: translateY(-2px);
            box-shadow: 4px 4px 8px #0f0f0f, -4px -4px 8px #2d2d2d;
        }

        .container {
            text-align: center;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 10px;
            text-shadow: 0 0 10px rgba(255,255,255,0.1);
        }

        p {
            font-size: 1.1rem;
            margin-bottom: 30px;
            color: #bdbdbd;
        }

        footer {
            position: absolute;
            bottom: 20px;
            text-align: center;
            color: #888;
            font-size: 0.9rem;
            width: 100%;
        }

        @media (max-width: 768px) {
            .logo {
                width: 65px;
                height: 65px;
                top: 15px;
                left: 15px;
            }

            .logout-btn {
                padding: 8px 25px;
                font-size: 0.9rem;
                right: 20px;
                top: 20px;
            }

            h2 {
                font-size: 1.6rem;
            }

            p {
                font-size: 1rem;
            }
        }
    </style>
</head>

<body>
